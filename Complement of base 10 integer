// https://leetcode.com/problems/complement-of-base-10-integer/submissions/1755887959

class Solution {
public:
    int bitwiseComplement(int n) {
        if(n==0){
            return 1;
        }
        int copy=n;
        int mask=0;
        while(copy!=0){
            mask=(mask<<1)|1;
            copy=copy>>1;
        }
        int ans=~n&mask;
        return ans;
    }
};
