// https://leetcode.com/problems/copy-list-with-random-pointer/submissions/1926637702

/*
// Definition for a Node.
class Node {
public:
    int val;
    Node* next;
    Node* random;
    
    Node(int _val) {
        val = _val;
        next = NULL;
        random = NULL;
    }
};
*/

class Solution {
public:
    Node* copyRandomList(Node* head) {
        if(head==NULL){
            return NULL;
        }
        Node* copy_head=new Node(head->val);
        Node* temp=copy_head;
        Node* og_temp=head->next;
        while(og_temp!=NULL){
            Node* create=new Node(og_temp->val);
            temp->next=create;
            temp=temp->next;
            og_temp=og_temp->next;
        }
        Node* og_curr=head;
        Node* copy_curr=copy_head;
        Node* og_next=og_curr;
        Node* copy_next=copy_curr;
        while(og_curr!=NULL){
            og_next=og_curr->next;
            copy_next=copy_curr->next;
            og_curr->next=copy_curr;
            copy_curr->next=og_next;
            og_curr=og_next;
            copy_curr=copy_next;
        }
        copy_curr=copy_head;
        og_curr=head;
        while(og_curr!=NULL){
            if(og_curr->random!=NULL){
                copy_curr->random=og_curr->random->next;
                
            }
            else{
                copy_curr->random=NULL;
            }
            if(copy_curr->next!=NULL){
                copy_curr=copy_curr->next->next;
                og_curr=og_curr->next->next;
            }
            else{
                copy_curr=NULL;
                og_curr=NULL;
            }
        }
        og_curr=head;
        copy_curr=copy_head;
        while(copy_curr!=NULL){
            og_next=copy_curr->next;
            if(og_next==NULL){
                copy_next=NULL;
            }
            else{
                copy_next=og_next->next;
            }
            og_curr->next=og_next;
            copy_curr->next=copy_next;
            og_curr=og_next;
            copy_curr=copy_next;
        }
        return copy_head;
    }
};
