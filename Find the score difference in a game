// class Solution {
public:
    int scoreDifference(vector<int>& nums) {
        int players[2]={0,0};
        int curr=0;
        for(int i=0;i<nums.size();i++){
            if(nums[i]%2==1){
                curr=(curr==0)?1:0;
            }
            if((i+1)%6==0){
                curr=(curr==0)?1:0;
            }
            players[curr]+=nums[i];
        }
        return players[0]-players[1];
    }
};Â©leetcode
