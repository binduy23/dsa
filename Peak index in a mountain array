// https://leetcode.com/problems/peak-index-in-a-mountain-array/submissions/1762474183

class Solution {
public:
    int peakIndexInMountainArray(vector<int>& arr) {
        int start=0;
        int end=arr.size()-1;
        int mid;
        while(start<end){
            mid=start+(end-start)/2;
            if(arr[mid]<arr[mid+1]){
                start=mid+1;
            }

            if(arr[mid]>arr[mid+1]){
                end=mid;
            }
        }
        return start;
    }
};
