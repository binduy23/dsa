// https://www.naukri.com/code360/problems/quick-sort_983625?leftPanelTabValue=SUBMISSION

#include <bits/stdc++.h> 
int find_pivot(vector<int>& arr,int s,int e){
    int pivot_num=arr[s];
    int count=0;
    for(int i=s+1;i<=e;i++){
        if(arr[i]<=pivot_num){
            count++;
        }
    }
    int pivot_index=s+count;
    swap(arr[s],arr[pivot_index]);
    int i = s, j = e;

    while (i < pivot_index && j > pivot_index) {
        if (arr[i] <= pivot_num) {
            i++;
        } else if (arr[j] > pivot_num) {
            j--;
        } else {
            swap(arr[i], arr[j]);
            i++;
            j--;
        }
    }

    return pivot_index;
}
void sort(vector<int>& arr,int s,int e){
    if(s>=e){
        return;
    }
    int pivot=find_pivot(arr,s,e);
    sort(arr,s,pivot-1);
    sort(arr,pivot+1,e);
}
vector<int> quickSort(vector<int> arr)
{
    // Write your code here.
    sort(arr,0,arr.size()-1);
    return arr;
}
