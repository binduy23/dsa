// https://leetcode.com/problems/remove-element/submissions/1891280717

class Solution {
public:
    int removeElement(vector<int>& nums, int val) {
        int k = 0; // index for placing non-val elements
        for (int i = 0; i < nums.size(); i++) {
            if (nums[i] != val) {
                nums[k++] = nums[i]; // overwrite val with valid element
            }
        }
        return k; // new length
    }
};
