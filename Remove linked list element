// https://leetcode.com/problems/remove-linked-list-elements/submissions/1910568419

/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {
        if(head==NULL){
            return head;
        }
        while(head!=NULL && head->val==val){
            head=head->next;
        }
        ListNode* temp=head;
        ListNode* prev=NULL;
        while(temp!=NULL){
            ListNode* frwrd=temp->next;
            if(temp->val==val){
                prev->next=frwrd;
                temp->next=NULL;
                delete temp;
                temp=frwrd;
            }
            else{
                prev=temp;
                temp=temp->next;
            }
            
        }
        return head;
    }
};
