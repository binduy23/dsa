#include <bits/stdc++.h> 
string replaceSpaces(string &str){
	// Write your code here.
    int size=str.size();
    
    int no_of_spaces=0;
    for(int i=0;i<size;i++){
        if(str[i]==' '){
            no_of_spaces++;
        }
    }
    for(int i=1;i<=(no_of_spaces*2);i++){
        str+=" ";
    }
    int total_size=str.size();
    
    int i=total_size-1;
    int j=size-1;
    string s="04@";
    
        while(j>=0 && i>=0){
            if(str[j]!=' '){
                str[i--]=str[j--];
                
            }
            else{
                for(char ch:s){
                    str[i--]=ch;
                }
                j--;
            }
            
        }
    
    
    return str;

}
