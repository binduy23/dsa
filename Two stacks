#include <bits/stdc++.h> 
class TwoStack {
private:
    int *arr;
    int start;
    int end;
    int size;
public:

    // Initialize TwoStack.
    TwoStack(int s) {
        // Write your code here.
        arr=new int[s];
        start=-1;
        end=s;
        this->size=s;
    }
    
    // Push in stack 1.
    void push1(int num) {
        // Write your code here.
        if(start+1<end){
            start++;
            arr[start]=num;
        }
    }

    // Push in stack 2.
    void push2(int num) {
        // Write your code here.
        if(end-1>start){
            end--;
            arr[end]=num;
        }
    }

    // Pop from stack 1 and return popped element.
    int pop1() {
        // Write your code here.
        if(start>=0){
            start--;
            return arr[start+1];
        }
        return -1;

    }

    // Pop from stack 2 and return popped element.
    int pop2() {
        // Write your code here.
        if(end<size){
            end++;
            return arr[end-1];

        }
        return -1;
    }
};
