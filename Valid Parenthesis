// https://leetcode.com/problems/valid-parentheses/submissions/1911580658

#include <stack>
class Solution {
private:
    bool getValidity(string s,stack<char>& st,int i){
        if(i==s.length()){
            cout<<st.empty()<<endl;
            if(st.empty()){
                return true;
            }
            return false;
        }
        if(s[i]=='(' || s[i]=='{' || s[i]=='['){
            st.push(s[i]);
            return getValidity(s,st,i+1);
        }
        else{
            if(st.empty()){
                return false;
            }
            if(s[i]-st.top()<=2 && s[i]-st.top()>0){
                cout<<s[i]<<" "<<st.top()<<endl;
                cout<<s[i]-st.top()<<endl;
                st.pop();
                return getValidity(s,st,i+1);
            }
            else{
                return false;
            }
        }
    }
public:
    bool isValid(string s) {
        if(s.length()<=1){
            return false;
        }
        stack<char> st;
        st.push(s[0]);
        bool ans=getValidity(s,st,1);
        return ans;
    }
};
