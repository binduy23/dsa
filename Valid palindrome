// https://leetcode.com/problems/valid-palindrome/submissions/1851067759

class Solution {
private:
    void modify(string s,string &temp){
        for(int i=0;i<s.size();i++){
            if((s[i]>='a' && s[i]<='z') || (s[i]>='A' && s[i]<='Z') || (s[i]>=48) && s[i]<=57){
                temp+=s[i];
            }
        }
    }
    char toLowerCase(char ch){
        if((ch>='a' && ch<='z') || (ch>=0 && ch<=9)){
            return ch;
        }
        else{
            return ch-'A'+'a';
        }
    }
public:
    bool isPalindrome(string s) {
        string temp="";
        modify(s,temp);
        cout<<temp;
        cout<<toLowerCase('A');
        int start=0;
        int end=temp.size()-1;
        while(start<end){
            if(toLowerCase(temp[start])!=toLowerCase(temp[end])){
                return false;
            }
            start++;
            end--;
        }
        return true;
    }
};
