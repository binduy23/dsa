#include <bits/stdc++.h> 
void insertionSort(int n, vector<int> &arr){
   for(int i=1;i<n;i++){
       int curr=arr[i];
       int j=i-1;
       for(;j>=0;j--){
           if(arr[j]>curr){
               arr[j+1]=arr[j];
           }
           else{
               break;
           }
       }
       arr[j+1]=curr;
   }
}
