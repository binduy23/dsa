//https://leetcode.com/problems/plus-one/submissions/1894588426

class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        int carry=1;
        vector<int> ans;
        for(int i=digits.size()-1;i>=0;i--){
            int sum=(digits[i]+carry)%10;
            carry=(digits[i]+carry)/10;
            ans.push_back(sum);
        }
        if(carry==1){
            ans.push_back(carry);
        }
        reverse(ans.begin(),ans.end());
        return ans;
    }
};
