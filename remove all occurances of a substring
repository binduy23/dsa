//  https://leetcode.com/problems/remove-all-occurrences-of-a-substring/submissions/1858004413/


class Solution {
public:
    string removeOccurrences(string s, string part) {
        int pos=s.find(part);
        while(pos<=s.size()){
            s.erase(pos,part.size());
            pos=s.find(part);
        }
        return s;
    }
};
