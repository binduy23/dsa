#include <bits/stdc++.h> 
string reverseString(string &str,int i=0)
{
	// Write your code here.
	int n=str.length();
	if(i>=n/2){
		return str;
	}
	swap(str[i],str[n-i-1]);
	return reverseString(str,i+1);
}
