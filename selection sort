#include <bits/stdc++.h> 
void selectionSort(vector<int>& arr, int n)
{  
    for(int i=0;i<n;i++){
        int min=i;
        for(int j=i+1;j<n;j++){
            if(arr[j]<arr[min]){
                min=j;
            }
        }
        swap(arr[min],arr[i]);
    } 
    // Write your code here.
}
